generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(cuid())
  name           String?
  email          String          @unique
  hashedPassword String
  role           Role            @default(USER)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  scanLogs           ScanLog[]
  inventoryItems     InventoryItem[]
  cycleCountsCreated CycleCount[]
  cycleCountEntries  CycleCountEntry[] @relation("CountedByUser")
}

model InventoryItem {
  id          String    @id @default(cuid())
  barcode     String    @unique
  name        String
  description String?   @db.Text
  quantity    Int       @default(0)
  bin         String?
  row         String?
  aisle       String?
  zone        String?
  unit        String?
  category    String?
  condition   Condition @default(GOOD)
  minStock    Int       @default(0)
  costPrice   Decimal?  @db.Decimal(10, 2)
  sageItemId  String?
  createdBy   User      @relation(fields: [createdById], references: [id])
  createdById String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  scanLogs          ScanLog[]
  cycleCountEntries CycleCountEntry[]

  @@index([barcode])
  @@index([name])
  @@index([category])
  @@index([zone])
  @@index([aisle])
}

model ScanLog {
  id              String        @id @default(cuid())
  barcode         String
  action          ScanAction
  quantityChange  Int           @default(0)
  notes           String?       @db.Text
  scannedBy       User          @relation(fields: [scannedById], references: [id])
  scannedById     String
  inventoryItem   InventoryItem? @relation(fields: [inventoryItemId], references: [id])
  inventoryItemId String?
  createdAt       DateTime      @default(now())

  @@index([barcode])
  @@index([createdAt])
  @@index([scannedById])
}

enum Role {
  USER
  ADMIN
}

enum Condition {
  NEW
  GOOD
  FAIR
  POOR
  DAMAGED
}

enum ScanAction {
  CREATED
  INCREMENTED
  DECREMENTED
  UPDATED
  AUDITED
}

model CycleCount {
  id            String             @id @default(cuid())
  name          String
  status        CycleCountStatus   @default(NOT_STARTED)
  filterType    String?
  filterValue   String?
  notes         String?            @db.Text
  startedAt     DateTime?
  completedAt   DateTime?
  createdBy     User               @relation(fields: [createdById], references: [id])
  createdById   String
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  entries       CycleCountEntry[]

  @@index([status])
  @@index([createdAt])
}

model CycleCountEntry {
  id               String        @id @default(cuid())
  cycleCount       CycleCount    @relation(fields: [cycleCountId], references: [id], onDelete: Cascade)
  cycleCountId     String
  inventoryItem    InventoryItem @relation(fields: [inventoryItemId], references: [id])
  inventoryItemId  String
  expectedQty      Int
  countedQty       Int?
  variance         Int?
  status           EntryStatus   @default(PENDING)
  countedBy        User?         @relation("CountedByUser", fields: [countedById], references: [id])
  countedById      String?
  adjustmentReason String?
  countedAt        DateTime?
  createdAt        DateTime      @default(now())

  @@index([cycleCountId])
  @@index([inventoryItemId])
  @@index([status])
}

enum CycleCountStatus {
  NOT_STARTED
  IN_PROGRESS
  COUNTED
  RECONCILED
  VOIDED
}

enum EntryStatus {
  PENDING
  COUNTED
  SKIPPED
}
